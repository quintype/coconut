<div class="home-page">
  <div class="container">
    <ul class="home-page__stories">
      {% for story in top_stories %}
        <li class="home-page__story story">
          <a class="story__link" href="/{{ story.slug }}">
            <img class="story__image" src="{{ story.hero-image-s3-key | focusedImage: story.hero-image-metadata, '16x9', 'w', 640 }}" >
            <h2 class="story__title">{{ story.headline }}</h2>
          </a>
        </li>
      {% endfor %}
    </ul>

    <aside class="home-page__side-bar">
      {% for stack in stacks %}
        <article class="side-bar__stack">
          <h1 class="stack__title">{{ stack.heading }}</h1>
          <ul>
            {% for story in stack.stories %}
            <li>
              <a href="/{{ story.slug }}">
                <h3 class="stack__heading">{{ story.headline }}</h3>
                <p class="stack__summary">{{ story.summary }}</p>
                <div class="stack__byline">
                  <span class="stack__author-name">{{ story.author-name }}</span>
                  <span class="stack__published-date">{{ story.last-published-at }}</span>
                </div>
              </a>
            </li>
            {% endfor %}
          </ul>
        </article>
      {% endfor %}
    </aside>
  </div>
</div>
